<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DatabaseControl</servlet-name>
        <servlet-class>xyz.duanwangye.blogs.control.DatabaseControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseControl</servlet-name>
        <url-pattern>/DatabaseControl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DispatcherControl</servlet-name>
        <servlet-class>xyz.duanwangye.blogs.control.DispatcherControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DispatcherControl</servlet-name>
        <url-pattern>/DispatcherControl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>xyz.duanwangye.blogs.tools.UploadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/UploadFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckStatus</servlet-name>
        <servlet-class>xyz.duanwangye.blogs.tools.CheckStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckStatus</servlet-name>
        <url-pattern>/CheckStatus</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>first.jsp</welcome-file>
    </welcome-file-list>

</web-app>